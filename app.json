{
  "expo": {
    "name": "PetForum",
    "slug": "PetForum",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "我们需要访问你的摄像头来拍摄照片。",
        "NSPhotoLibraryUsageDescription": "我们需要访问你的相册来选择照片。",
        "NSMicrophoneUsageDescription": "我们需要访问你的麦克风来录制视频。"
      },
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
